{
  "name": "le-benaton",
  "version": "1.0.0",
  "description": "西宮・夙川のフレンチレストラン「ル・ベナトン」Webサイト",
  "scripts": {
    "build": "ts-node -P tsconfig.json scripts/build-data",
    "watch": "watch \"npm run build\" ./src",
    "format": "npm run format:typescript && npm run format:html && npm run format:css && npm run format:js",
    "format:html": "prettier --parser html --write \"src/**/*.html\"",
    "format:css": "prettier --parser css --write \"src/**/*.css\"",
    "format:js": "prettier --parser babel --write \"src/**/*.js\"",
    "format:typescript": "prettier --parser typescript --write \"scripts/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/le-benaton/website.git"
  },
  "author": "Masahiko Sakakibara<sakakibara@rdlabo.jp>",
  "bugs": {
    "url": "https://github.com/le-benaton/website/issues"
  },
  "homepage": "https://www.benaton.net",
  "devDependencies": {
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-ionic-rules": "0.0.21",
    "typescript": "^4.0.2",
    "watch": "^1.0.2",
    "flexsearch": "^0.6.32"
  }
}
